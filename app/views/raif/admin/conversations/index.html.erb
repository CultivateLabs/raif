<h1 class="my-4"><%= t("raif.admin.common.conversations") %></h1>

<div class="row">
  <div class="col-12">
    <% if @conversations.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th><%= t("raif.admin.common.id") %></th>
              <th><%= t("raif.admin.common.created_at") %></th>
              <th><%= t("raif.admin.common.creator") %></th>
              <th><%= t("raif.admin.common.type") %></th>
              <th><%= t("raif.admin.common.entries_count") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render collection: @conversations, partial: "raif/admin/conversations/conversation" %>
          </tbody>
        </table>
      </div>

      <div class="mt-4">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <%= t("raif.admin.common.no_conversations") %>
      </div>
    <% end %>
  </div>
</div>
